<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:layout_width="408dp"
        android:layout_height="731dp"
        android:background="@drawable/gradient1"
        android:orientation="vertical"
        android:padding="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Welcome, "
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="20dp"
                    android:textColor="@color/white"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nadia Leni"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="32dp"
                    android:textColor="@color/white"
                    android:id="@+id/tvUserName"/>

            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/user_icon" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <SearchView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_search_box"
                android:queryHint="Search here" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:paddingTop="30dp"
                android:text="Popular Destination >"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="150dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgOrchidForest"
                        android:layout_width="250dp"
                        android:layout_height="150dp"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/orchid_forest_picture"
                        android:scaleType="centerCrop"/>

                    <ImageView
                        android:id="@+id/imgBaliZoo"
                        android:layout_width="250dp"
                        android:layout_height="150dp"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/bali_zoo_picture"
                        android:scaleType="centerCrop"/>

                    <ImageView
                        android:id="@+id/imgPrambanan"
                        android:layout_width="250dp"
                        android:layout_height="150dp"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/candi_prambanan_picture"
                        android:scaleType="centerCrop"/>

                    <ImageView
                        android:id="@+id/imgJakartaBirdLand"
                        android:layout_width="250dp"
                        android:layout_height="150dp"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/jakarta_bird_land"
                        android:scaleType="centerCrop"/>

                    <ImageView
                        android:id="@+id/imgVenice"
                        android:layout_width="250dp"
                        android:layout_height="150dp"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/little_venice_picture"
                        android:scaleType="centerCrop"/>

                    <ImageView
                        android:id="@+id/imgLabuanBajo"
                        android:layout_width="250dp"
                        android:layout_height="150dp"
                        android:src="@drawable/labuan_bajo_picture"
                        android:scaleType="centerCrop"/>

                </LinearLayout>

            </HorizontalScrollView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="29dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/poppins_regular"
                android:text="Explore >"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:id="@+id/orchidForest">

                        <ImageView
                            android:layout_width="232dp"
                            android:layout_height="127dp"
                            android:src="@drawable/orchid_forest_picture"
                            android:scaleType="centerCrop"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Orchid Forest Cikole"
                            android:fontFamily="@font/poppins_semibold"
                            android:textColor="@color/white"
                            android:textSize="20dp"
                            android:id="@+id/tvOrchidForest"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:id="@+id/baliZoo">

                        <ImageView
                            android:layout_width="232dp"
                            android:layout_height="127dp"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/bali_zoo_picture"
                            android:scaleType="centerCrop"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Bali Zoo"
                            android:fontFamily="@font/poppins_semibold"
                            android:textColor="@color/white"
                            android:textSize="20dp"
                            android:id="@+id/tvBaliZoo"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:id="@+id/candiPrambanan">

                        <ImageView
                            android:layout_width="232dp"
                            android:layout_height="127dp"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/candi_prambanan_picture"
                            android:scaleType="centerCrop"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Candi Prambanan"
                            android:fontFamily="@font/poppins_semibold"
                            android:textColor="@color/white"
                            android:textSize="20dp"
                            android:id="@+id/tvPrambanan"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:id="@+id/jakartaBirdLand">

                        <ImageView
                            android:layout_width="232dp"
                            android:layout_height="127dp"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/jakarta_bird_land"
                            android:scaleType="centerCrop"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Jakarta Bird Land"
                            android:fontFamily="@font/poppins_semibold"
                            android:textColor="@color/white"
                            android:textSize="20dp"
                            android:id="@+id/tvJakartaBirdLand"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:id="@+id/littleVienice">

                        <ImageView
                            android:layout_width="232dp"
                            android:layout_height="127dp"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/little_venice_picture"
                            android:scaleType="centerCrop"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Little Venice"
                            android:fontFamily="@font/poppins_semibold"
                            android:textColor="@color/white"
                            android:textSize="20dp"
                            android:id="@+id/tvLittleVenice"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:id="@+id/labuanBajo">

                        <ImageView
                            android:layout_width="232dp"
                            android:layout_height="127dp"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/labuan_bajo_picture"
                            android:scaleType="centerCrop"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Labuan Bajo"
                            android:fontFamily="@font/poppins_semibold"
                            android:textColor="@color/white"
                            android:textSize="20dp"
                            android:id="@+id/tvLabuanBajo"/>

                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

            <Space
                android:layout_width="match_parent"
                android:layout_height="80dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>