<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.BookTicketFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/gradient2"
        android:padding="30dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Book Ticket"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/white"
            android:textSize="40dp"
            android:layout_marginBottom="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bookticketbox"
            android:orientation="vertical"
            android:paddingVertical="20dp"
            android:paddingHorizontal="30dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Orchid Forest Cikole"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/light_black"
                android:textSize="26dp"
                android:textAlignment="center"
                android:layout_marginBottom="18dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="18dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ticket Price: Rp "
                    android:textColor="@color/light_black"
                    android:textSize="18dp"
                    android:fontFamily="@font/poppins_semibold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50000"
                    android:textColor="@color/light_black"
                    android:textSize="18dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:id="@+id/tvPrice"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="18dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Customer's Name"
                    android:id="@+id/tvName"
                    android:textColor="@color/light_black"
                    android:textSize="18dp"
                    android:fontFamily="@font/poppins_semibold"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/etName"
                    android:background="@drawable/edit_text_box"
                    android:paddingVertical="6dp"
                    android:paddingHorizontal="10dp"
                    android:textSize="15dp"
                    android:fontFamily="@font/poppins_medium"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="18dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Number of Person"
                    android:id="@+id/tvNumOfPerson"
                    android:textColor="@color/light_black"
                    android:textSize="18dp"
                    android:fontFamily="@font/poppins_semibold"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/etNumOfPerson"
                    android:background="@drawable/edit_text_box"
                    android:paddingVertical="6dp"
                    android:paddingHorizontal="10dp"
                    android:textSize="15dp"
                    android:fontFamily="@font/poppins_medium"
                    android:inputType="number" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="18dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:id="@+id/tvDate"
                    android:textColor="@color/light_black"
                    android:textSize="18dp"
                    android:fontFamily="@font/poppins_semibold"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/etDate"
                    android:background="@drawable/edit_text_box"
                    android:paddingVertical="6dp"
                    android:paddingHorizontal="10dp"
                    android:textSize="15dp"
                    android:fontFamily="@font/poppins_medium"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Price"
                    android:textColor="@color/light_black"
                    android:textSize="20dp"
                    android:fontFamily="@font/poppins_semibold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="end">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp "
                        android:textColor="@color/light_black"
                        android:textSize="20dp"
                        android:fontFamily="@font/poppins_semibold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="50000"
                        android:textColor="@color/light_black"
                        android:textSize="20dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:id="@+id/tvTotalPrice"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/book_button">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Book Now"
                android:textSize="20dp"
                android:fontFamily="@font/poppins_semibold"
                android:backgroundTint="@color/purple"
                android:background="@drawable/transparent"
                android:id="@+id/btnBookNow"/>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>